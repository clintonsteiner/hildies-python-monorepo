"""BUILD file for hildie-cli package."""

load("@rules_python//python:defs.bzl", "py_binary", "py_library")
load("//tools:pytest.bzl", "pytest_tests")

py_library(
    name = "hildie_cli",
    srcs = glob(["src/**/*.py"]),
    imports = ["src"],
    visibility = ["//visibility:public"],
    deps = [
        "//:hildie",
        "//packages/my-library:hildie_library",
        "@pip//click",
