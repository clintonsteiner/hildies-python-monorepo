    name = "cli",
    srcs = ["src/hildie/hildie_cli/main.py"],
    main = "src/hildie/hildie_cli/main.py",
    deps = [":hildie_cli"],
)

pytest_tests(
    name = "tests",
    srcs = glob(["tests/**/test_*.py"]),
    deps = [
        ":hildie_cli",
        "@pip//click",
    ],
)
